rule PDCLibTargetConfig { }
rule PDCLibTargetHeaders {
    SubDirHdrs $(PDCLIB_TOP) platform hello_os includes ;
    SubDirHdrs $(PDCLIB_TOP) platform hello_os internals ;
}

if $(PDCLIB_TOOLCHAIN) = "gcc" {
    PDCLIB_TEST_LINKFLAGS += -nostdlib ;
    PDCLIB_TEST_LINKLIBS += -lgcc ;
}

PDCLIB_OPTIONS = 
	nothread 
	notime 
	dlmalloc 
	tss_errno 
	basecodecs 
    c_locale 
    ;
